<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f44336"
        tools:context=".NonLoginActivity2">

        <ImageView
            android:id="@+id/imgchillipaneer"
            android:layout_width="146dp"
            android:layout_height="153dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/chillipaneer" />
        <TextView
            android:id="@+id/txtchilli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHILLI PANEER"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgchillipaneer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.200-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgchillipaneer"
            android:layout_below="@id/textrating"/>
        <TextView
            android:id="@+id/textrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgchillipaneer"
            android:layout_below="@id/txtchilli"/>
        <Button
            android:id="@+id/btnorder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgchillipaneer"
            android:text="order now"

            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgchillipotato"
            android:layout_width="171dp"
            android:layout_height="147dp"
            android:layout_below="@id/btnorder2"
            android:src="@drawable/potato" />
        <TextView
            android:id="@+id/txtpotato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHILLI POTATO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgchillipotato"
            android:layout_below="@+id/btnorder2"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.200-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgchillipotato"
            android:layout_below="@id/textrating1"/>
        <TextView
            android:id="@+id/textrating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgchillipotato"
            android:layout_below="@id/txtpotato"/>
        <Button
            android:id="@+id/btnorder3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgchillipotato"
            android:text="order now"

            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgnoodels"
            android:layout_width="151dp"
            android:layout_height="126dp"
            android:layout_below="@id/btnorder3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/noodles" />
        <TextView
            android:id="@+id/txtveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VEG NOODLES"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnorder3"
            android:layout_toRightOf="@id/imgnoodels"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.250-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgnoodels"
            android:layout_below="@id/textrating2"/>

        <TextView
            android:id="@+id/textrating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtveg"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/imgnoodels"
            android:text="Rating 4.5"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnorder4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgnoodels"
            android:text="order now"

            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgmanchurian"
            android:layout_width="151dp"
            android:layout_height="185dp"
            android:layout_below="@id/btnorder4"
            android:layout_marginLeft="15dp"
            android:src="@drawable/manchurian" />
        <TextView
            android:id="@+id/txtman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VEG MANCHURIAN (DRY)  "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/imgmanchurian"
            android:layout_below="@id/btnorder4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.250-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgmanchurian"
            android:layout_below="@id/textrating3"/>
        <TextView
            android:id="@+id/textrating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgmanchurian"
            android:layout_below="@id/txtman"/>
        <Button
            android:id="@+id/btnorder5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgmanchurian"
            android:text="order now"

            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgrools"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/spring"
            android:layout_below="@id/btnorder5"/>
        <TextView
            android:id="@+id/txtspring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPRING ROOLS  "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/imgrools"
            android:layout_below="@id/btnorder5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.250-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgrools"
            android:layout_below="@id/textrating4"/>
        <TextView
            android:id="@+id/textrating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgrools"
            android:layout_below="@id/txtspring"/>
        <Button
            android:id="@+id/btnorder6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgrools"
            android:text="order now"

            android:textSize="15sp"
            android:textStyle="bold"/>

    </RelativeLayout>
</ScrollView>