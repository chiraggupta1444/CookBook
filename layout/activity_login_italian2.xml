<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fDE255"
        tools:context=".NonLoginActivity2">

        <ImageView
            android:id="@+id/imgpizza"
            android:layout_width="146dp"
            android:layout_height="153dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/pizza" />
        <TextView
            android:id="@+id/txtchilli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIZZA"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgpizza"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.200-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgpizza"
            android:layout_below="@id/textrating"/>
        <TextView
            android:id="@+id/textrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 5.0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgpizza"
            android:layout_below="@id/txtchilli"/>
        <Button
            android:id="@+id/btnorder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgpizza"
            android:text="order now"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgPESTO"
            android:layout_width="171dp"
            android:layout_height="147dp"
            android:layout_below="@id/btnorder1"
            android:src="@drawable/pesto" />
        <TextView
            android:id="@+id/txtpotato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITALIAN PESTO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@id/btnorder1"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.200-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@id/textrating1"/>
        <TextView
            android:id="@+id/textrating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@id/txtpotato"/>
        <Button
            android:id="@+id/btnorder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPESTO"
            android:text="order now"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgredpasta"
            android:layout_width="151dp"
            android:layout_height="126dp"
            android:layout_below="@id/btnorder2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/redpasta" />
        <TextView
            android:id="@+id/txtveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RED SAUSE PASTA"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnorder2"
            android:layout_toRightOf="@id/imgredpasta"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.250-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgredpasta"
            android:layout_below="@id/textrating2"/>

        <TextView
            android:id="@+id/textrating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtveg"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/imgredpasta"
            android:text="Rating 4.5"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnorder3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgredpasta"
            android:text="order now"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/imgwhitw"
            android:layout_width="151dp"
            android:layout_height="185dp"
            android:layout_below="@id/btnorder3"
            android:layout_marginLeft="15dp"
            android:src="@drawable/whitepasta" />
        <TextView
            android:id="@+id/txtman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHITE SAUSE PASTA  "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/btnorder3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.250-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/textrating3"/>
        <TextView
            android:id="@+id/textrating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/txtman"/>
        <Button
            android:id="@+id/btnorder4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgwhitw"
            android:text="order now"
            android:textSize="15sp"
            android:textStyle="bold"/>




    </RelativeLayout>
</ScrollView>