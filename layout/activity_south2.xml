<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fDE255"
        tools:context=".NonLoginActivity2">

        <ImageView
            android:id="@+id/imgpizza"
            android:layout_width="146dp"
            android:layout_height="153dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/masaladosa" />
        <TextView
            android:id="@+id/txtchilli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASALA DOSA"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgpizza"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.180-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgpizza"
            android:layout_below="@id/textrating"/>
        <TextView
            android:id="@+id/textrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.8"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgpizza"
            android:layout_below="@id/txtchilli"/>


        <ImageView
            android:id="@+id/imgPESTO"
            android:layout_width="171dp"
            android:layout_height="147dp"
            android:layout_below="@id/imgpizza"
            android:src="@drawable/pannerdosa" />
        <TextView
            android:id="@+id/txtpotato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PANEER DOSA"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@+id/imgpizza"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.220-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@id/textrating1"/>
        <TextView
            android:id="@+id/textrating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.7"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgPESTO"
            android:layout_below="@id/txtpotato"/>


        <ImageView
            android:id="@+id/imgredpasta"
            android:layout_width="151dp"
            android:layout_height="126dp"
            android:layout_below="@id/imgPESTO"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/idli" />

        <TextView
            android:id="@+id/txtveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPESTO"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/imgredpasta"
            android:text="IDLIS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.150-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgredpasta"
            android:layout_below="@id/textrating2"/>

        <TextView
            android:id="@+id/textrating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtveg"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/imgredpasta"
            android:text="Rating 4.5"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imgwhitw"
            android:layout_width="151dp"
            android:layout_height="185dp"
            android:layout_below="@id/imgredpasta"
            android:layout_marginLeft="15dp"
            android:src="@drawable/vada" />
        <TextView
            android:id="@+id/txtman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMBHAR VADA "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/imgredpasta"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.160-/"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/textrating3"/>
        <TextView
            android:id="@+id/textrating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 4.9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgwhitw"
            android:layout_below="@id/txtman"/>




    </RelativeLayout>
</ScrollView>