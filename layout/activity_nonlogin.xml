<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgIndian"
            android:layout_width="200dp"
            android:layout_height="171dp"
            android:src="@drawable/indian1" />
        <Button
            android:id="@+id/btnBut2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtText2"
            android:layout_margin="25dp"
            android:text="SELECT"
            android:layout_toRightOf="@id/imgIndian"
            android:textSize="15sp"
            android:textStyle="italic"

            />
        <TextView
            android:id="@+id/txtText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIndian"
            android:text="INDIAN"
            android:textStyle="italic"
            android:textSize="25sp"
            android:layout_margin="25dp"/>
        <ImageView
            android:id="@+id/imgchinese"
            android:layout_width="200dp"
            android:layout_height="171dp"
            android:layout_below="@id/imgIndian"
            android:src="@drawable/chinese" />
        <Button
            android:id="@+id/btnBut3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:layout_below="@id/txtText3"
            android:layout_toRightOf="@id/imgchinese"
            android:layout_margin="25dp"
            android:textSize="15sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/txtText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIndian"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgchinese"
            android:text="CHINESE"
            android:textSize="25sp"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/imgitalian"
            android:layout_width="200dp"
            android:layout_height="171dp"
            android:layout_below="@id/imgchinese"
            android:src="@drawable/italian" />
        <Button
            android:id="@+id/btnBut4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:layout_below="@id/txtText4"
            android:layout_toRightOf="@id/imgitalian"
            android:layout_margin="25dp"
            android:textSize="15sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/txtText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgchinese"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgitalian"
            android:text="ITALIAN"
            android:textSize="25sp"
            android:textStyle="italic" />
        <ImageView
            android:id="@+id/imgsouth"
            android:layout_width="200dp"
            android:layout_height="171dp"
            android:layout_below="@id/imgitalian"
            android:src="@drawable/south" />
        <Button
            android:id="@+id/btnBut5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:layout_below="@id/txtText5"
            android:layout_toRightOf="@id/imgsouth"
            android:layout_margin="25dp"
            android:textSize="15sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/txtText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgitalian"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgchinese"
            android:text="SOUTH INDIAN"
            android:textSize="25sp"
            android:textStyle="italic" />
    </RelativeLayout>
</ScrollView>